    <script>
        // Cart functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Quantity controls
            const decreaseButtons = document.querySelectorAll('.decrease');
            const increaseButtons = document.querySelectorAll('.increase');
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const removeButtons = document.querySelectorAll('.remove-btn');

            // Decrease quantity
            decreaseButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const input = document.querySelector(`.quantity-input[data-id="${id}"]`);
                    if (input.value > 1) {
                        input.value = parseInt(input.value) - 1;
                        updateCart();
                    }
                });
            });

            // Increase quantity
            increaseButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const input = document.querySelector(`.quantity-input[data-id="${id}"]`);
                    input.value = parseInt(input.value) + 1;
                    updateCart();
                });
            });

            // Remove item
            removeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const item = document.querySelector(`.cart-item:has(.quantity-input[data-id="${id}"])`);
                    if (item) {
                        item.style.opacity = '0';
                        setTimeout(() => {
                            item.remove();
                            updateCart();
                        }, 300);
                    }
                });
            });

            // Update cart totals (simplified version)
            function updateCart() {
                // In a real application, you would calculate totals based on all items
                // For this example, we'll just update the item count in the badge
                const cartItems = document.querySelectorAll('.cart-item');
                const cartBadge = document.querySelector('.cart-badge');

                if (cartBadge && cartItems.length > 0) {
                    let totalItems = 0;
                    quantityInputs.forEach(input => {
                        totalItems += parseInt(input.value);
                    });
                    cartBadge.textContent = totalItems;
                }

                // Show empty cart message if no items
                if (cartItems.length === 0) {
                    document.querySelector('.desktop-cart-item').innerHTML = `
                        <div class="empty-cart">
                            <div class="empty-cart-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <h3>Your cart is empty</h3>
                            <p class="text-muted mb-4">Add some products to your cart to continue shopping</p>
                            <a href="products.html" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    `;

                    document.querySelector('.mobile-cart-item').innerHTML = `
                        <div class="empty-cart">
                            <div class="empty-cart-icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <h3>Your cart is empty</h3>
                            <p class="text-muted mb-4">Add some products to your cart to continue shopping</p>
                            <a href="products.html" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    `;
                }
            }
        });
    </script>
