                                </div>
                            </div>



                            <div class="feature-toggle">
                                <div>
                                    <label class="form-label">Continue Selling When Out of Stock</label>
                                    <div class="form-text">Allow purchases even when inventory is 0</div>
                                </div>
                                <label class="toggle-switch">
                                    <input  name="featureToggle" type="checkbox" id="continueSelling">
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                        </div>

                        <!-- Product Images Section -->
                        <div class="form-section">
                            <h3 class="section-title">Product Images</h3>

