                                <p class="text-muted">or</p>
                                <button type="button" class="btn btn-primary" id="browseImagesBtn">Browse Files</button>
                                <input  name="imageUrl" type="file" id="imageInput" multiple accept="image/*" style="display: none;">
                                <p class="small text-muted mt-2">Supported formats: JPG, PNG, GIF. Max 5MB per image.</p>
                            </div>

                            <div class="image-preview-container" id="imagePreviewContainer">
                                <!-- Image previews will be added here -->
                            </div>
                        </div>


                       <div class="form-section">
                            <h3 class="section-title">Product Variants</h3>

                            <div class="mb-3">
                                <div class="form-check mb-2">
                                    <input  name="sectionTitle" class="form-check-input " type="checkbox" id="hasVariants">
                                    <label class="form-check-label" for="hasVariants">
                                        This product has options like size or color
                                    </label>
                                </div>
                            </div>

                            <div id="variantOptions" style="display: none;">
                                <div class="mb-3">
                                    <label class="form-label">Option Name (e.g., Size, Color)</label>
                                    <input name="variantOptions" type="text" class="form-control" id="optionName" placeholder="Size or Color ...">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Option Values</label>
                                    <input  name="optionValuesSize" type="text" class="form-control" id="optionValues" placeholder="Separate values with commas (e.g., Small, Medium, Large)">
                                </div>
                                <button type="button" class="btn btn-outline-primary mb-3" id="addOptionBtn">Add Another Option</button>
                            </div>
                        </div>

                        <!-- Product Specifications Section -->




                        <!-- Product Status Section -->
                        <div class="form-section">
                            <h3 class="section-title">Product Status</h3>

                            <div class="mb-3">
                                <label for="productStatus" class="form-label">Status</label>
                                <select class="form-select" id="productStatus" name="Status">
                                    <option value="draft">Draft</option>
                                    <option value="active" selected>Active</option>
                                    <option value="archived">Archived</option>
                                </select>
                            </div>

                            <div class="feature-toggle">
                                <div>
                                    <label class="form-label">Featured Product</label>
                                    <div class="form-text">Show this product in featured sections</div>
                                </div>
                                <label class="toggle-switch">
                                    <input type="checkbox" id="featuredProduct" name="featuredProduct">
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-outline-secondary">Save as Draft</button>
                            <div>
                                <button type="button" class="btn btn-outline-primary me-2">Preview</button>
                                <button type="submit" class="btn btn-primary">Publish Product</button>
                            </div>
                        </div>
                    </form>
