    <script>
        // Mobile filter toggle
        document.getElementById('mobileFilterToggle').addEventListener('click', function() {
            document.getElementById('filterSidebar').classList.add('show');
            document.getElementById('filterOverlay').classList.add('show');
        });

        document.getElementById('closeFilters').addEventListener('click', function() {
            document.getElementById('filterSidebar').classList.remove('show');
            document.getElementById('filterOverlay').classList.remove('show');
        });

        document.getElementById('filterOverlay').addEventListener('click', function() {
            document.getElementById('filterSidebar').classList.remove('show');
            this.classList.remove('show');
        });

        // Price range slider
        const priceRange = document.getElementById('priceRange');
        const priceValue = document.getElementById('priceValue');

        priceRange.addEventListener('input', function() {
            priceValue.textContent = this.value;
        });

        // Wishlist toggle
        const wishlistButtons = document.querySelectorAll('.wishlist-btn');
        wishlistButtons.forEach(button => {
            button.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                    this.classList.add('active');
                } else {
                    icon.classList.remove('fas');
                    icon.classList.add('far');
                    this.classList.remove('active');
                }
            });
        });

        // Compare products functionality
        const compareCheckboxes = document.querySelectorAll('.compare-checkbox');
        const compareBar = document.getElementById('compareBar');
        const clearCompareBtn = document.getElementById('clearCompare');

        compareCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const checkedCount = document.querySelectorAll('.compare-checkbox:checked').length;

                if (checkedCount > 0) {
                    compareBar.classList.remove('d-none');
                    compareBar.querySelector('span').textContent = `${checkedCount} products selected for comparison`;
                } else {
                    compareBar.classList.add('d-none');
                }

                // Limit to 4 products for comparison
                if (checkedCount >= 4) {
                    compareCheckboxes.forEach(cb => {
                        if (!cb.checked) {
                            cb.disabled = true;
                        }
                    });
                } else {
                    compareCheckboxes.forEach(cb => {
                        cb.disabled = false;
                    });
                }
            });
        });

        clearCompareBtn.addEventListener('click', function() {
            compareCheckboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
            compareBar.classList.add('d-none');
        });

        // Category navigation
        const categoryLinks = document.querySelectorAll('.category-link');
        categoryLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                categoryLinks.forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
